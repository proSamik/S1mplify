<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.S1mplify" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#414141</item>
        <item name="colorPrimaryVariant">#282828</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="listPreferredItemPaddingStart">60dp</item>
        <item name="listPreferredItemHeightSmall">60dp</item>

        <item name="drawerArrowStyle">@style/DrawerIcon</item>

    </style>

    <style name="Theme.S1mplify.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.S1mplify.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.S1mplify.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.S1mplify.Fullscreen" parent="Theme.S1mplify">
        <item name="android:actionBarStyle">@style/Widget.Theme.S1mplify.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.S1mplify.FullscreenContainer" parent="ThemeOverlay.AppCompat.Dark">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>