<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Learn"
    android:background="@color/back_grey">

    <TextView
        android:id="@+id/link1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Link 1"
        android:textSize="24dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/link2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/link2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Link 2"
        android:textSize="24dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/link3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/link1"/>
    <TextView
        android:id="@+id/link3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Link 3"
        android:textSize="24dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/link2"
        app:layout_constraintTop_toBottomOf="@id/link2"  />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#201F1F">

        <!--Home Button-->
        <Button
            android:id="@+id/profile"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:drawableTop="@drawable/home_button_white"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <!--Info Button-->
        <Button
            android:id="@+id/info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:drawableTop="@drawable/learn_button"
            android:text="Info."
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profile" />

        <!--Learn Button-->

        <Button
            android:id="@+id/learn"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:textColor="@color/yellow"
            android:drawableTop="@drawable/learn_yellow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Learn"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/info" />


        <!--Donate Button-->
        <Button
            android:id="@+id/donate"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:drawableTop="@drawable/donate_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Donate"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/forum" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>